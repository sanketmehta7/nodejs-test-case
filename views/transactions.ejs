<h1>Transactions page
	<a href="/logout" class="btn pull-right">Logout</a>
</h1>
<input type="hidden" id="token" value="<%=token%>"/>
<h4>Create Stripe Payments</h4>
<br/><br/>
<ul class="nav nav-tabs" role="tablist">
  <li role="presentation" class="active"><a href="#newc" aria-controls="newc" role="tab" data-toggle="tab">New card</a></li>
  <% if(cards.length){ %>
  <li role="presentation" ><a href="#saved" aria-controls="saved" role="tab" data-toggle="tab">Saved Card</a></li>
 <% } %>
</ul>
<div class="tab-content transTab">
	<% if(cards.length){ %>
		<div role="tabpanel" id="saved" class="tab-pane">
			<div class="card">
				<div class="brand"><%=cards[0].brand%></br></div>
				<div class="number">**** **** **** <%=cards[0].last4%></div>
			</div>
			<form style="" class="form-horizontal">
				<input type="hidden" id="cust" name="cust" value="<%=cust%>"/>
				<input type="hidden" id="card" name="card" value="<%=cards[0].id%>" />
				<div class="form-group">
					<label for="amount" class="col-sm-2">Amount:</label>
					<div class="col-sm-10">
					<input type="number" name="amount" id="amountS" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="currency" class="col-sm-2">Currency: </label>
					<div class="col-sm-10">
					<input type="text" name="currency" id="currencyS" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<p class="payment-errors alert alert-danger"></p>
					<input type="button" class="submittransaction btn btn-primary" id="submitsaved" value="Submit">
				</div>
			</form>
		</div>
	<% } %>
	<div role="tabpanel" id="newc" class="tab-pane  active">
		<form style="" class="form-horizontal new">
			<div class="form-group">
				<label for="amount" class="col-sm-2">Amount:</label>
				<div class="col-sm-10">
				<input type="number" name="amount" id="amount" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="currency" class="col-sm-2">Currency: </label>
				<div class="col-sm-10">
				<input type="text" name="currency" id="currency" class="form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="cardnumber" class="col-sm-2">Card number </label>
				<div class="col-sm-10">
				<input type="text" name="customerid" id="cardnumber" class="card-number form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="cvc" class="col-sm-2">CVC: </label>
				<div class="col-sm-10">
				<input type="number" name="cvc" id="cvc" class="card-cvc form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="card-expiry-month" class="col-sm-2">Expired Month: </label>
				<div class="col-sm-10">
				<input type="number" name="card-expiry-month" id="card-expiry-month" class="card-expiry-month form-control">
				</div>
			</div>
			<div class="form-group">
				<label for="card-expiry-year" class="col-sm-2">Expired Year: </label>
				<div class="col-sm-10">
				<input type="number" name="card-expiry-year" id="card-expiry-year" class="card-expiry-year form-control">
				</div>
			</div>
			<div class="form-group">
				<p class="payment-errors alert alert-danger"></p>
				<input type="button" class="submittransaction btn btn-primary" id="submittransaction" value="Submit">
			</div>
		</form>
	</div>
</div>